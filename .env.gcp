# Google Cloud Platform Environment Configuration
ENVIRONMENT=production
GOOGLE_CLOUD_PROJECT=your-project-id

# Database Configuration (Cloud SQL)
DATABASE_URL=postgresql://transcribe_user:password@/transcribe_db?host=/cloudsql/your-project-id:us-central1:transcribe-db

# Redis Configuration (Memorystore)
REDIS_URL=redis://10.0.0.1:6379/0

# Cloud Storage
STORAGE_BUCKET=transcribe-app-uploads-your-project-id

# Cloud Tasks
TASK_QUEUE_NAME=transcription-queue
TASK_LOCATION=us-central1

# Secrets (managed by Secret Manager)
# OPENAI_API_KEY will be retrieved from Secret Manager
USE_SECRET_MANAGER=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
DEBUG=false

# Logging
LOG_LEVEL=INFO

# Security
ALLOWED_ORIGINS=https://your-frontend-domain.web.app